{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"strict": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": false,
		"baseUrl": ".",
		"paths": {
			"@interfaces/*": ["src/database/strategies/mongodb/interfaces/*"],
			"@mongoDbSchemas/*": ["./src/database/strategies/mongodb/schemas/*"],
			"@mongoDbStrategies/*": ["./src/database/strategies/mongodb/*"],
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts"
	]
}